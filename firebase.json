{
  "hosting": {
    "public": "dist/name-calendar",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/api/**",
        "destination": "https://nameday.abalin.net/",
        "type": 301
      }
    ]
  }
}
