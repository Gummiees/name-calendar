{
  "hosting": {
    "public": "dist/name-calendar",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/api/**",
        "destination": "https://nameday.abalin.net/",
        "type": 302
      }
    ]
  }
}
